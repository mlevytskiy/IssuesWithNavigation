<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.core.issueswithnavigation.viewmodel.HomeFragmentViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On boarding"
            android:onClick="@{()->viewModel.navToOnBoarding()}" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test fragment"
            android:onClick="@{()->viewModel.navToTest()}" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test2 fragment"
            android:onClick="@{()->viewModel.navToTest2()}" />

    </LinearLayout>
